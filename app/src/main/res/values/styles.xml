<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="title_text_style_phone_land">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="info_text_style_phone_land">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
    </style>

    <style name="title_text_style_tablet_large">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="info_text_style">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="info_text_style_tablet_large">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/black_btn_round</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
