<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="title_text_style_phone_land">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="info_text_style_phone_land">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_90</item>
    </style>

    <style name="title_text_style_tablet_large">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="info_text_style">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/gray_90</item>
    </style>

    <style name="info_text_style_tablet_large">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/gray_90</item>
    </style>

    <style name="Button">
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="background">@drawable/container_round_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Container">
        <item name="android:padding">24dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/container_round_background</item>
    </style>
</resources>